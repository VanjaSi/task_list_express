<%- include('./partials/top.ejs') %>
<h2 class="text-center mb-3">All Tasks</h2>
<div class="d-flex flex-column gap-4">

<% tasks.forEach(task => { %>
    <div>
        <p class="m-0 text-black-50">created :<%= new Date(task.created).toDateString() %></p>
        <div class="border-dark btn w-100 py-2 text-start d-flex justify-content-between align-items-center" style="background-color: <%= task.categoryColor%>">
        <!-- <span class="d-inline-block" style="background-color: <%= task.priorityColor%>; width: 10px; height:100%"></span> -->
            <p><%= task.task %></p>
            <div>
                <% if (task.completed === 1) { %>
                 
                    <a href="/task/status?done=true&id=<%= task.id%>" class="btn btn-sm btn-primary text-white text-white"><i class="bi bi-check-square"></i></a>

                <% }else{ %>
                    <a href="/task/status?done=false&id=<%= task.id%>" class="btn btn-sm btn-primary text-white text-white"><i class="bi bi-square"></i></a>

                <% } %>

                <a href="/task/delete/<%= task.id %>" class="btn btn-sm btn-warning text-white text-white"><i class="bi bi-trash"></i></a>
            </div>
        </div>
        <p class="m-0 text-black-50">deadline :<%= new Date(task.deadline).toDateString() %></p>

    </div>
<%}); %>
</div>
<%- include('./partials//bottom.ejs')  %>

    