<%- include('./partials/top.ejs') %>
<h2>Category</h2>
<% category.forEach(el=> { %>
    <div style="background-color:<%= el.color%>" class="py-1 px-2 text-white rounded-2 d-flex justify-content-between align-items-center mb-2">
        <p class="m-0"><%= el.name  %></p>
        <div>
            <a href="/category/edit/<%= el.id%>" class="btn btn-sm btn-primary text-white text-white"><i class="bi bi-gear"></i></a>
            <a href="category/delete/<%= el.id%>" class="btn btn-sm btn-warning text-white text-white"><i class="bi bi-trash"></i></a>
        </div>
    </div>
<% }); %>
  
    <a href="/category/add" class="btn btn-sm btn-primary text-white w-100"><i class="bi bi-plus"></i></a>
    <br><br>
    
<h2>Priority</h2>
<% priority.forEach(el => { %>
