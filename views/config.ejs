        <div>
            <a href="/priority/edit/<%= el.id %>" class="btn btn-sm btn-primary text-white text-white"><i class="bi bi-gear"></i></a>
            <a href="/priority/delete/<%= el.id %>" class="btn btn-sm btn-warning text-white text-white"><i class="bi bi-trash"></i></a>
        </div>
    </div>

<%}) %>

